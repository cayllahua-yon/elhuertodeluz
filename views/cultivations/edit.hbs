<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/cultivations/edit/{{cultivation.id}}" method="post">
                        <div class="form-group">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" id="name" value="{{ cultivation.name }}" class="form-control" name="name" autofocus required>
                        </div>
                        <div class="form-group">
                            <label for="date_inicio" class="form-label">Fecha inicio</label>
                            <input type="date" id="date_inicio" value="{{ dayjs cultivation.date_inicio}}" name="date_inicio" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_germination" class="form-label">Fecha germinación</label>
                            <input type="date" id="date_germination" value="{{ dayjs cultivation.date_germination}}" name="date_germination" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_mediumdose" class="form-label">Fecha dosis media</label>
                            <input type="date" id="date_mediumdose" value="{{ dayjs cultivation.date_mediumdose}}" name="date_mediumdose" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_fulldose" class="form-label">Fecha dosis completa</label>
                            <input type="date" id="date_fulldose" value="{{ dayjs cultivation.date_fulldose}}" name="date_fulldose" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_firsttransplant" class="form-label">Fecha primer transplante</label>
                            <input type="date" id="date_firsttransplant" value="{{ dayjs cultivation.date_firsttransplant}}" name="date_firsttransplant" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_finaltransplant" class="form-label">Fecha último transplante</label>
                            <input type="date" id="date_finaltransplant" value="{{ dayjs cultivation.date_finaltransplant}}" name="date_finaltransplant" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="date_harvest" class="form-label">Fecha cosecha</label>
                            <input type="date" id="date_harvest" value="{{ dayjs cultivation.date_harvest}}" name="date_harvest" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="quantity" class="form-label">Cantidad plantas</label>
                            <input type="number" id="quantity" value="{{ cultivation.quantity }}" name="quantity" class="form-control" pattern="[0-9]{1-4}" maxlength="4" required>
                        </div>
                        <div class="form-group">
                            <label for="observation" class="form-label">Observación</label>                            
                            <textarea name="observation" id="observation" cols="15" rows="5" class="form-control">{{ cultivation.observation }}</textarea>
                        </div>        

                        <div class="form-group  mt-2">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button> 
                            <a href="/cultivations" class="btn btn-danger">Cancelar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
